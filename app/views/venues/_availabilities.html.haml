%table.venue_margin{:style => "width: 100%"}
  %thead
    %th.avail_head Date
    %th.avail_head Promotion
    %th
    %th
  -venue.availabilities.order(:date).each do |ava|
    %tr
      %td.avail= ava.date
      %td.avail= ava.promotion
      %td.schedule_btns= link_to("Edit", edit_availability_path(ava.id), :class => "schedule_btns", :remote => true, :class => "button round")
      %td.schedule_btns= link_to("Delete", "/availabilities/#{ava.id}", :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this availability?", :class => "button round success")
