=form_tag activities_path, :remote => true do
  =hidden_field_tag :venue_id, @venue.id
  =hidden_field_tag :user_type, @user_type
  %p Enter a Challenge or Question
  =text_field_tag :question
  %label Should the response be a text or photo?
  .switch.small.round.small-3.small-centered
    %input#a{:name => "response_type", :type => "radio", :value => "t"}
    %label{:for => "a", :onclick => ""} Text
    %input#a1{:checked => "checked", :name => "response_type", :type => "radio", :value => "p"}
    %label{:for => "a1", :onclick => ""} Photo
    %span
  =submit_tag nil, :class => "button round small"
