-@cu.venues.order(:name).each do |venue|
  .row
    .large-3.columns
      = image_tag(venue.image.thumb.url)
    .large-9.columns
      %h3.venue= venue.name
      %p.venue_info= venue.address
      = link_to(image_tag("edit_bar_btn.jpg"), edit_venue_path(venue.id), :class => 'bar_btns', :remote => true)
      = link_to(image_tag("delete_bar_btn.jpg"), "/venues/#{venue.id}", :class => 'bar_btns', :method => :delete, :remote => true, :confirm => "Are you sure you want to delete this venue?")
      = link_to(image_tag("avail_bar_btn.jpg"), new_availabilities_venue_path(venue.id), :class => 'bar_btns', :remote => true)
  .row
    .large-12.columns
      %p= "Categories: #{venue.categories.map(&:name).join(", ")}"
  .row
    .large-12.columns
      / %h5.availabilities Availabilities
      .venue_availabilities{:data => {venue:venue.id}}
        = render :partial => 'venues/availabilities', :locals => {:venue => venue}


